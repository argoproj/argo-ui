{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "declaration": false,
        "skipLibCheck": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "./**/*",
        "../src/**/*"
    ]
}
